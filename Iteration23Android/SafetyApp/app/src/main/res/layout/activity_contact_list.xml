<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/tettimonialList"
    android:orientation="vertical"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
tools:context=".sos.ContactListActivity">


    <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/contactRecViewId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="@drawable/header">

    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/emgContactEmptyMsg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#0097A7"
            android:fontFamily="@font/googlesans_bold"
            android:text="@string/emptyContactMsh"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
        <info.hoang8f.widget.FButton
            android:id="@+id/showAddContactBtn"
            android:layout_width="200dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            fbutton:buttonColor="@color/lightGreen"
            android:textSize="25sp"
            android:text="@string/addContact" />
    </LinearLayout>


</LinearLayout>