<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/rootLayoutId"
    tools:context=".QuestionsActivity">
    <LinearLayout
        android:id="@+id/optionsContainerId"
        android:layout_weight="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/backgroundColor"
        android:visibility="gone"
        android:padding="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonOpt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@android:color/white"
            android:background="@drawable/borders_rounded"
            android:backgroundTint="#989898"
            android:text="Button" />

        <Button
            android:id="@+id/buttonOpt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@android:color/white"
            android:background="@drawable/borders_rounded"
            android:backgroundTint="#989898"
            android:text="Button" />

        <Button
            android:id="@+id/buttonOpt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@android:color/white"
            android:background="@drawable/borders_rounded"
            android:backgroundTint="#989898"
            android:text="Button" />

        <Button
            android:id="@+id/buttonOpt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@android:color/white"
            android:background="@drawable/borders_rounded"
            android:backgroundTint="#989898"
            android:text="Button" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:gravity="end"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/nextBtnId"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/next"/>
    </LinearLayout>
</LinearLayout>